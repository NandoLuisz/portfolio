{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["esnext", "dom"],
      "module": "ESNext",
      "skipLibCheck": true,

      "incremental": true,
      "tsBuildInfoFile": "./.tsbuildinfo",

      "resolveJsonModule": true,
      "esModuleInterop": true,
  
      /* Bundler mode */
      "moduleResolution": "node",
      "isolatedModules": true,
      "moduleDetection": "force",
      "noEmit": true,
  
      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
    }
  }
  